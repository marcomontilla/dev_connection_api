{
  "name": "devconnector",
  "version": "0.1.0",
  "description": "Social network for developers",
  "main": "server.js",
  "scripts": {
    "prettier": "onchange '**/**/**/*.js' -- prettier --write {{changed}}",
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "npm-run-all --parallel server client",
    "dev-watch": "npm-run-all --parallel prettier server client"
  },
  "author": "Marco Montilla",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.3.14",
    "onchange": "^5.1.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "prettier": "1.15.3"
  }
}
